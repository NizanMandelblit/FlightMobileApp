<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarSize="?android:attr/scrollbarSize">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="413dp"
        android:layout_height="313dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toTopOf="@+id/throttleNameBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/viewUrl"
        android:layout_width="350dp"
        android:layout_height="69dp"
        android:layout_marginBottom="2dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rudderNum"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/rudderNameBox"
        app:layout_constraintEnd_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/elevatorNameBox"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/throttleNum"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/seekBar1"
        app:layout_constraintEnd_toStartOf="@+id/joystickView"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.883" />

    <com.example.flightmobileapp.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="238dp"
        android:layout_height="262dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="385dp"></com.example.flightmobileapp.JoystickView>

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/rudderNameBox"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="220dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:rotation="270"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarSize="646dp"
        android:tag="Throttle"
        app:layout_constraintBottom_toTopOf="@+id/rudderNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/throttleNameBox"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/rudderNameBox"
        android:layout_width="80dp"
        android:layout_height="29dp"
        android:text="Rudder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/throttleNameBox"
        android:layout_width="56dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:rotation="270"
        android:text="Throttle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/seekBar1"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.633" />

    <TextView
        android:id="@+id/aileronNameBox"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginTop="116dp"
        android:text="Aileron"
        app:layout_constraintBottom_toTopOf="@+id/joystickView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/elevatorNameBox"
        android:layout_width="60dp"
        android:layout_height="67dp"
        android:layout_marginStart="238dp"
        android:orientation="vertical"
        android:rotation="270"
        android:text="Elevator"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        app:layout_constraintStart_toEndOf="@+id/joystickView"
        app:layout_constraintStart_toStartOf="@+id/joystickView"
        app:layout_constraintTop_toBottomOf="@+id/elevatorNum"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/aileronNum"
        android:layout_width="92dp"
        android:layout_height="27dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/joystickView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toEndOf="@+id/aileronNameBox" />

    <TextView
        android:id="@+id/elevatorNum"
        android:layout_width="41dp"
        android:layout_height="51dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        android:rotation="270"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aileronNum" />


</androidx.constraintlayout.widget.ConstraintLayout>